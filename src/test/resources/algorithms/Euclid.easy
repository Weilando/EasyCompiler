int <- abs(int number) {
  if(number < 0) {
      return -number;
  } else {
    return number;
  }
}

/* Reduce fraction numerator/denominator.
  Print false, if gcd could not be calculated.
  Print true and the reduced fraction, otherwise. */
none <- main() {
  int a = 42;
  int b = 56;
  int c;
  int numerator = a;
  int denominator = b;

  if(denominator == 0) { // check zero-division
    println(false);
  } else { // reduce fraction
    a = abs(a);
    b = abs(b);

    // use Euclid's algoritm to find gcd(a,b)
    if(a <= 0 || b <= 0) {
      println(false);  // cannot calculate gcd
      //return;
    } else {
      while(b > 0) {
        c = a % b;
        a = b;
        b = c;
      }

      println(true);
      println(a); // gcd
      println((numerator / a) ยง "/" ยง (denominator / a));  // reduced fraction
    }
  }
}
